<UserControl x:Class="ShoefitterDX.Renderer.PreviewRenderer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShoefitterDX.Renderer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ToolBar>
            <Button x:Name="RenderDocCaptureButton" Click="RenderDocCaptureButton_Click">RenderDoc: Capture</Button>
        </ToolBar>
        <local:D3D11Element x:Name="D3D11" Grid.Row="1" />
    </Grid>
</UserControl>
