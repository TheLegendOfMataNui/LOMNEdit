<local:EditorBase x:Class="ShoefitterDX.Editors.AreaEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShoefitterDX.Editors"
             xmlns:renderer="clr-namespace:ShoefitterDX.Renderer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4px" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TabControl>
            <TabItem Header="Objects">
                
            </TabItem>
        </TabControl>

        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

        <Grid Grid.Column="2">
            <renderer:PreviewRenderer x:Name="PreviewRenderer" />
        </Grid>
    </Grid>
</local:EditorBase>
